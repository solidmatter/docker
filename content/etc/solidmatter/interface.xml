<?xml version="1.0" ?>
<config>
	
	<!-- primary repository, keep it clean! -->
	<site location="dev.frontend/" type="controller" handler="frontend" subject="demowebsite">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="false" verbose="false" />
		<site location="dev.frontend/templates" type="controller" handler="xsl" subject="demotemplates" />
		<site location="dev.frontend/mmm" type="controller" handler="frontend" subject="demofiles" />
	</site>
	<site location="dev.backend/" type="controller" handler="backend" theme="_admin">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="dev.backend/templates" type="controller" handler="xsl" subject="demotemplates" />
		<site location="dev.backend/theme" type="theme" handler="backend" theme="_admin" />
		<site location="dev.backend/favicon.ico" type="passthrough" file="interface/solidmatter.ico" mimetype="" />
	</site>
	<site location="dev.jukebox/" type="controller" handler="application" subject="demojukebox">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="dev.jukebox/api" type="controller" handler="api" subject="demojukebox" />
		<site location="dev.jukebox/theme" type="theme" handler="backend" theme="_default" />
		<site location="dev.jukebox/play" type="controller" handler="jbaudiostream" />
		<site location="dev.jukebox/rss" type="controller" handler="jbrss" />
		<site location="dev.jukebox/favicon.ico" type="passthrough" file="interface/themes/_default/sb_jukebox/jukebox.ico" mimetype="" />
	</site>

	<!-- docker repository -->
	<site location="@SERVERALIAS1@/" type="controller" handler="frontend" subject="demowebsite">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="false" verbose="false" />
		<site location="@SERVERALIAS1@/templates" type="controller" handler="xsl" subject="demotemplates" />
		<site location="@SERVERALIAS1@/mmm" type="controller" handler="frontend" subject="demofiles" />
	</site>
	<site location="@SERVERALIAS2@/" type="controller" handler="backend" theme="_admin">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="@SERVERALIAS2@/templates" type="controller" handler="xsl" subject="demotemplates" />
		<site location="@SERVERALIAS2@/theme" type="theme" handler="backend" theme="_admin" />
		<site location="@SERVERALIAS2@/favicon.ico" type="passthrough" file="interface/solidmatter.ico" mimetype="" />
	</site>
	<site location="@JUKEBOXSERVERNAME@/" type="controller" handler="application" subject="demojukebox">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="@JUKEBOXSERVERNAME@/api" type="controller" handler="api" subject="demojukebox" />
		<site location="@JUKEBOXSERVERNAME@/theme" type="theme" handler="backend" theme="_default" />
		<site location="@JUKEBOXSERVERNAME@/play" type="controller" handler="jbaudiostream" />
		<site location="@JUKEBOXSERVERNAME@/rss" type="controller" handler="jbrss" />
		<site location="@JUKEBOXSERVERNAME@/favicon.ico" type="passthrough" file="interface/themes/_default/sb_jukebox/jukebox.ico" mimetype="" />
	</site>

</config>
